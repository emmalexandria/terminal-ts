{
  "name": "terminal-ts",
  "version": "1.0.1",
  "description": "A typed library offering a full suite of tools for building fake terminals in the web, from a virtual filesystem to running both real and fake commands.",
  "main": "dist/node/index.js",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "run-s clean build:ts",
    "lint": "eslint .",
    "format": "prettier --ignore-path .gitignore --write '**/*.+(js|ts|json)'",
    "clean": "del dist/*",
    "build:ts": "tsup",
    "build:watch": "tsup --watch"
  },
  "exports": {
    ".": {
      "require": "./dist/index,cjs",
      "import": "./dist/index.js"
    },
    "./server": {
      "require": "./dist/server.cjs",
      "import": "./dist/server.js"
    }
  },
  "keywords": [
    "typescript",
    "terminal",
    "node",
    "browser",
    "tools",
    "fake-terminal",
    "cli",
    "tui"
  ],
  "author": "Emma Alexandria",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^22.9.3",
    "@types/path-browserify": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "2.1.8",
    "del-cli": "^6.0.0",
    "eslint": "^9.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "happy-dom": "^15.11.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.0.2",
    "vite-plugin-no-bundle": "^4.0.0",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "path-browserify": "^1.0.1"
  }
}
